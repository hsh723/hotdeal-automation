#####################################################
# 쿠팡 핫딜 크롤러 환경 설정 파일
# 사용 방법: 이 파일을 .env로 복사하고 값을 수정하세요
#####################################################

#----------------------------------------------------
# 텔레그램 설정 (필수 입력)
#----------------------------------------------------
# BotFather에서 생성한 봇 토큰을 입력하세요
# 예: 123456789:ABCdefGhIJklmNoPQRstUVwxyZ
TELEGRAM_BOT_TOKEN=your_bot_token_here

# 메시지를 보낼 채팅방 ID를 입력하세요
# 개인 채팅: 숫자 ID (예: 123456789)
# 채널/그룹: -100으로 시작하는 ID (예: -1001234567890)
TELEGRAM_CHAT_ID=your_chat_id_here

#----------------------------------------------------
# 크롤링 설정
#----------------------------------------------------
# 크롤링할 최대 페이지 수 (기본값: 3)
# 값이 클수록 더 많은 상품을 수집하지만 시간이 오래 걸립니다
MAX_PAGES=3

# 요청 간 최소 대기 시간(초) (기본값: 3)
# IP 차단 방지를 위해 너무 작게 설정하지 마세요
DELAY_MIN=3

# 요청 간 최대 대기 시간(초) (기본값: 5)
# DELAY_MIN과 DELAY_MAX 사이에서 랜덤하게 대기합니다
DELAY_MAX=5

#----------------------------------------------------
# 텔레그램 알림 설정
#----------------------------------------------------
# 최소 할인율(%) - 이 값 이상 할인된 상품만 알림 (기본값: 20)
MIN_DISCOUNT=20

# 한 번에 전송할 최대 상품 수 (기본값: 10)
MAX_ITEMS=10

#----------------------------------------------------
# 크롤러 고급 설정
#----------------------------------------------------
# 헤드리스 모드 사용 여부 (true/false)
# GitHub Actions에서는 항상 true로 설정됩니다
HEADLESS=true

# 디버그 모드 사용 여부 (true/false)
# true로 설정하면 더 자세한 로그가 출력됩니다
DEBUG=false
